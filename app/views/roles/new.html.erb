<h3>New Role</h3>
<%= form_for @role, html: {class: "form-horizontal"} do |f| %>
    <% @role.errors.each do |attr, msg| %>
      <ul>
        <li><%= attr.to_s+" "+msg %></li>
      </ul>
    <% end %>
    <div class="form-group">
      <%= f.label :role_name, "Role", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :role_name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
          </div>
        </div>

      <% end %>